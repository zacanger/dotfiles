root = true

[*]
end_of_line = LF
charset = utf-8
max_line_length = 80
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

[*.{rs,py}]
indent_size = 4

[*.swift]
indent_size = 4
trim_trailing_whitespace = false

[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4
